{
    "require": {
        "codeception/codeception": "~2.2",
        "browserstack/browserstack-local": "dev-master",
        "codegyre/robo": "*",
        "codeception/robo-paracept": "@dev",
        "fuzionnz/codeception-config-helper": "dev-master",
        "fuzionnz/codeception-drupal-pages": "~0.2",
        "fuzionnz/codeception-drupal-variable": "~0.3",
        "fuzionnz/codeception-civicrm-pages": "~0.1"
    },
    "scripts": {
        "test": "composer single && composer local && composer parallel",
        "single": "vendor/bin/codecept run --env single -g single",
        "local": "vendor/bin/codecept run --env local -g local",
        "parallel": "vendor/bin/robo parallel:all"
    },
    "require-dev": {
        "league/factory-muffin": "^3.0",
        "league/factory-muffin-faker": "^2.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/fuzionnz/codeception-drupal-pages"
        },
        {
            "type": "vcs",
            "url": "https://github.com/fuzionnz/codeception-drupal-variable"
        },
        {
            "type": "vcs",
            "url": "git@git.fuzion.co.nz:projects/codeception-civicrm-pages.git"
        },
        {
            "type": "path",
            "url": "/Users/chris/Documents/codeception-config-helper"
        }
    ],
    "autoload": {
        "classmap": ["lib/"]
    }
}
